 <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >  
<mapper namespace="com.enn.commodity.synergistic.dao.MineralResourcesDao" >  
 <select id="SelectMineralResourcesByObject" resultType="com.enn.commodity.synergistic.entity.MineralResources">
     SELECT localityInfoId,locality,productName,unitprice,commitdate,phonenumber,userId,img,showname,location,combustionvalue,isCompany,dataSourceId,dataSourceName,goodsType
     FROM mineralresourcesinfo
     WHERE 1=1
     <if test="productName!=null and productName!=''" >
     and productName  LIKE CONCAT(CONCAT('%', #{productName}), '%')
     </if>
     <if test="commitdate!=null and commitdate!=''" >
     and commitdate=#{commitdate}
     </if>
    <if test="location!=null and location!=''" >
     and location=#{location}
     </if>
    
  </select>
 
 <insert id="InsertMineralResources" useGeneratedKeys="true" keyProperty="localityInfoId" keyColumn="localityInfoId" parameterType="com.enn.commodity.synergistic.entity.MineralResources">
    insert into mineralresourcesinfo (localityInfoId,locality,productName,unitprice,commitdate,phonenumber,userId,img,showname,location,combustionvalue,isCompany,dataSourceId,dataSourceName,goodsType) values(#{localityInfoId},#{locality},#{productName},#{unitprice},#{commitdate},#{phonenumber},#{userId},#{img},#{showname},#{location},#{combustionvalue},#{isCompany},#{dataSourceId},#{dataSourceName},#{goodsType})
  </insert>
 
