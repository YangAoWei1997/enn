<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >  
<mapper namespace="com.enn.commodity.synergistic.dao.ShareDataTemplate" >  
 <select id="SelectSystemOrgByObject" resultType="com.enn.commodity.synergistic.entity.ShareDataTemplate">
     SELECT ID,name,comments,IP,port,orgID,orgName
     FROM systemorg
     WHERE 1=1
     <if test="name!=null and name!=''" >
     and name  LIKE CONCAT(CONCAT('%', #{name}), '%')
     </if>
     <if test="ID!=null and ID!=''" >
     and ID=#{ID}
     </if>
    <if test="comments!=null and comments!=''" >
     and comments=#{comments}
     </if>
    <if test="IP!=null and IP!=''" >
     and IP=#{IP}
     </if>
     <if test="port!=null and port!=''" >
     and port=#{port}
     </if>
     <if test="orgID!=null and orgID!=''" >
     and orgID=#{orgID}
     </if>
     <if test="orgName!=null and orgName!=''" >
     and orgName=#{orgName}
     </if>
     
  </select>
 
 <insert id="CreateShareDataTemplate"  keyColumn="ID" parameterType="com.enn.commodity.synergistic.entity.ShareDataTemplate">
    insert into sharedatatemplate 
    (ID,name,comments,shareDataTemplateTypeID,ownerId,ownerName,createdDate,status) 
    values
    (#{ID},#{name},#{comments},#{shareDataTemplateTypeID},#{ownerId},#{ownerName},#{createdDate},#{status})
  </insert>
 
 <update id="UpdateShareDataTemplate" parameterType="com.enn.commodity.synergistic.entity.ShareDataTemplate">
     UPDATE sharedatatemplate
     <set>
       <if test="name!=null">name=#{name},</if>
       <if test="comments!=null">comments=#{comments},</if>
       <if test="shareDataTemplateTypeID!=null">shareDataTemplateTypeID=#{shareDataTemplateTypeID},</if>
       <if test="ownerId!=null">ownerId=#{ownerId},</if>
       <if test="ownerName!=null">ownerName=#{ownerName},</if>
       <if test="createdDate!=null">createdDate=#{createdDate},</if>
       <if test="status!=null">status=#{status},</if>
     </set>
     WHERE ID=#{ID}
  </update>
 
 <delete id="DeleteShareDataTemplate" parameterType="com.enn.commodity.synergistic.entity.ShareDataTemplate">
     DELETE FROM
     sharedatatemplate
     WHERE
     ID=#{ID}
  </delete>
 
